use axum::{
    Router,
    routing::get;
}
use tokio::net::TcpListener;

async fn create_app() -> Router {
    Router::new()
        .route("/", get(|| async { "This is website root" } ))
}

fn run() {
    let app: Router = create_app();
    let listener: TcpListener = TcpListener::bind("0.0.0.0:3000")
        .await?;

    axum::serve(listener, app)
        .await?
        .unwrap()
}
